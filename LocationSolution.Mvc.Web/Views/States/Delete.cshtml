@model LocationSolution.Mvc.Web.Models.States.StateDeleteModel

@{
    ViewBag.Title = "Delete State " + Model.State.StateName;
}

<h1>Delete State <small>@Model.State.StateName</small></h1>

@using (Html.BeginForm())
{
    <p>Are you sure you want to delete <strong>@Model.State.StateName</strong>? This is permanent!</p>  
    <div class="form-actions">
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn" })
        <div class="pull-right">
            <button type="submit" class="btn btn-danger">Delete State</button>
        </div>
    </div>
}

