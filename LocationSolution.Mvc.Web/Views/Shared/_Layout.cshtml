<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css", "~/Content/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">Locations</a>

                @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class = "navbar-form pull-right" }))
                {
                    <div class="input-append">
                        @Html.TextBox("Query", Request["Query"], new {placeholder = "Global Search"})
                        <button type="submit" class="btn btn-inverse">Search</button>
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span2">
                <div class="well sidebar-nav">
                    <ul class="nav nav-list">
                        <li class="nav-header">Administration</li>
                        <li>@Html.ActionLink("Countries", "Index", "Countries")</li>
                        <li>@Html.ActionLink("States", "Index", "States")</li>
                        <li>@Html.ActionLink("Cities", "Index", "Cities")</li>
                        <li>@Html.ActionLink("Zips", "Index", "ZipCodes")</li>
                    </ul>
                </div>
            </div>
            <div class="span10">
                @Flash.FlashMessage(TempData)
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
